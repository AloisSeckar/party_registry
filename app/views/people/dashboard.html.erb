    <thead>
      <tr>
        <th>Datum</th>
        <th>Popis</th>
      </tr>
    </thead>
    <tbody>
      <% cache(:expires_in => 5.minutes) do %>
      <% for item in NewsFeed.items %>
      <tr>
        <td>před <%= distance_of_time_in_words_to_now item.created_at %></td>
        <td><%= auto_link item.text %></td>
      </tr>
