<%
  page_title @person.name
  breadcrumb :person, @person
%>

<h3><%= @page_title %></h3>
<dd><img src="<%= @person.photo_url %>"></dd>
<dl class="dl-horizontal">
<dt>VS</dt><dd><%= @person.vs %></dd>
<dt>Jméno</dt><dd><%= @person.name %></dd>
<dt>Email</dt><dd><%= mail_to @person.email %></dd>
<dt>Telefon</dt><dd><%= @person.phone %></dd>
<dt>Domovská stránka</dt><dd><%= link_to @person.homepage_url %></dd>
<dt>fb stránka</dt><dd><%= link_to @person.fb_page_url %></dd>
<dt>fb profil</dt><dd><%= link_to @person.fb_profile_url %></dd>
<dt>Kraj</dt><dd><%= @person.domestic_region.name %></dd>
</dl>

<h4>Heslo pro webdav</h4>
<dl class="dl-horizontal">
<dt>Heslo</dt><dd><% unless flash[:password].blank? %><%= flash[:password] %><% else %>***********<% end %></dd>
</dl>
<%= form_tag("/webdav_passwords", method: "post") do %>
  <%= submit_tag("Vygenerovat nové heslo") %>
<% end %>