<%
  page_title "Seznam žadatelů o členství"
  render "backoffice/sidebar"
%>

<table id="people" class="table table-striped">
  <thead>
    <tr><th>ID osoby</th><th>Jméno</th><th>Zařazen v kraji</th><th>Zařazen v pobočce</th>
      <th>Stav</th>
      <th>Poslední změna</th>
    </tr>
  </thead>
  <tbody>
    <% @membership_requests.each do |request| %>
    <tr>
      <td><%=request.person_id%></td>
      <td><%=request.person.try(:name)%></td>
      <td><%=request.person.try(:domestic_region).try(:name)%></td>
      <td><%=request.person.try(:domestic_branch).try(:name)%></td>
      <td><%=tag(:i, class: 'glyphicon glyphicon-pencil', style:'color: green', title: "Přihláška přijata dne #{l(request.application_received_on)}") if request.application_received_on%>
      <%=tag(:i, class: 'glyphicon glyphicon-usd', style:'color: green', title: "Platba zpracována dne #{l(request.paid_on)}") if request.paid_on %>
      <%=tag(:i, class: 'glyphicon glyphicon-thumbs-up', style:'color: green', title: "KrP vynačil schválení dne #{l(request.approved_on)}") if request.approved_on %></td>
      <td><%=l [request.membership_requested_on,request.application_received_on,request.approved_on,request.paid_on].compact.max%></td>
    </tr>
    <% end %>
  </tbody>
</table>
