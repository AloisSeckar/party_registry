<%
page_title "Osobní údaje"
#breadcrumb(:branch, @branch)
%>

<%= simple_form_for current_person, url: request.original_url, as: 'person' do |f| %>
  <%= f.error_notification %>
  <%= f.input :id, disabled: true %>
  <%= f.input :name_prefix, hint: "Ing. / Bc. / Mgr.", disabled: !configatron.migrated %>
  <%= f.input :first_name, disabled: !configatron.migrated %>
  <%= f.input :last_name, disabled: !configatron.migrated %>
  <%= f.input :name_suffix, disabled: !configatron.migrated %>
  <%= f.input :date_of_birth, disabled: !configatron.migrated %>
  <%= f.button :submit, value: "Uložit", class: 'btn btn-success' %>
  <% end %>
