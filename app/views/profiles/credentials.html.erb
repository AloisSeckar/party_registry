<%
  page_title "Přihlašovací údaje"
  render 'sidebar'
#breadcrumb(:branch, @branch)
%>

<%= simple_form_for current_person, url: request.original_url, as: 'person' do |f| %>
<%= f.error_notification %>
<%= f.input :username, disabled: !configatron.migrated %>
<%= f.input :password, disabled: !configatron.migrated %>
<%= f.input :password_confirmation, disabled: !configatron.migrated %>
<%= f.button :submit, value: "Uložit", class: 'btn btn-success' %>
<% end %>
